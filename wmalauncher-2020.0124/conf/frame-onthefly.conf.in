          ### 
	  #    Global section    #
	                       ###

  # Note that each attribute in the global section can be redefined in
  # any application section. 
  #
  # Attributes with a # in front of them are commented and are ignored.
  #

# This attribute define the list of preferred terminal emulators. The
# 1st available terminal in this list is used to run the command/application
# when attribute run-in-terminal is set to true (or 1, yes, on). By default,
# this list is set to @DEFAULT_PREFERRED_TERMINALS@
#
# preferred-terminals =

# This allows to re-define the window size. Default to 64 which is the
# standard size of dockapps.
#
# window-size         =

icon-padding              = 4
border-size               = 2
background-color          = Gray80
hover-background-color    = Gray80
border-color              = Gray80
hover-border-color        = Gray80

# These attributes respectively define the icon search paths, the 
# destkop file search path, and font search path used by wmalauncher
# to search for icons, .destkop file and fonts. 
#
# By default :
#   * the icon search paths is set to :
#
#      @DEFAULT_ICON_SEARCH_PATH@
#
#   * the .desktop file search path is set to:
#
#      DEFAULT_DESKTOP_FILE_SEARCH_PATH
#
#   * the font search paths is set to :
#
#      @DEFAULT_FONT_SEARCH_PATH@
#
# icon-search-path          =
# desktop-file-search-path  =
# font-search-path          =


tooltip-font              = DejaVuSans-Bold/10
tooltip-background-color  = White
tooltip-foreground-color  = Black
tooltip-border-size       = 1
tooltip-text-padding      = 4
tooltip-show-delay        = 500
tooltip-hide-delay        = 10000

icon-grayscale            = off
hover-icon-grayscale      = off

frame                     = Gray80/GhostWhite:Gray80/Gray35:2
icon-brightness           = -0.1
hover-icon-brightness     = 0.1

icon-contrast             = 1.0
hover-icon-contrast       = 1.0

icon-gamma                = 1.0
hover-icon-gamma          = 1.0

# This attribute defines whether or not wmalauncher must terminate
# on right-click. Can be set to 1,yes,on,true,0,no,off (default),false.
#
exit-on-right-click       = off

